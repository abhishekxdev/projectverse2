{
  "name": "gurucool-ai-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --runInBand",
    "test:unit": "jest --testPathPattern=tests/unit --runInBand --verbose",
    "test:e2e": "jest --testPathPattern=tests/integrations --runInBand --verbose",
    "test:emulators": "firebase emulators:start --only auth,firestore --project demo-gurucool-test",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "seed": "ts-node --project tsconfig.scripts.json scripts/seed.ts",
    "seed:prod": "FIREBASE_AUTH_EMULATOR_HOST= FIRESTORE_EMULATOR_HOST= ALLOW_PRODUCTION_SEED=true ts-node --project tsconfig.scripts.json scripts/seed.ts",
    "reset:auth": "ts-node --project tsconfig.scripts.json scripts/reset.auth.ts",
    "reset:auth:prod": "FIREBASE_AUTH_EMULATOR_HOST= FIRESTORE_EMULATOR_HOST= ALLOW_PRODUCTION_RESET=true ts-node --project tsconfig.scripts.json scripts/reset.auth.ts",
    "test:competency-flow": "ts-node --project tsconfig.scripts.json scripts/test-competency-flow.ts",
    "test:pd-flow": "ts-node --project tsconfig.scripts.json scripts/test-pd-flow.ts",
    "create:test-media": "bash scripts/create-test-media.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.73",
    "@aws-sdk/client-s3": "^3.955.0",
    "@aws-sdk/s3-request-presigner": "^3.955.0",
    "@types/multer": "^2.0.0",
    "ai": "^3.4.33",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "firebase-admin": "^13.6.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.0",
    "helmet": "^8.1.0",
    "jest": "^29.7.0",
    "multer": "^2.0.2",
    "openai": "^4.42.0",
    "supertest": "^6.3.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
